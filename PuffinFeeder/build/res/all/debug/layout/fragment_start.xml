<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to Feeder!"
            android:id="@+id/textViewBig"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Swipe from the left to select a feed."
            android:id="@+id/textViewSmall"
            android:layout_below="@+id/textViewBig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/gina_puffin"
            android:layout_below="@+id/textViewSmall"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"/>
</RelativeLayout><!-- From: file:/C:/Users/f151909/Documents/GitHub/gina-puffinfeeder-android-viewer/PuffinFeeder/src/main/res/layout/fragment_start.xml -->